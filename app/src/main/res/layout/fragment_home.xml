<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spaceblue"
    android:visibility="visible"
    tools:context=".homeui.home.HomeFragment"
    tools:visibility="visible">


    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/ytvideo"
        android:layout_width="369dp"
        android:layout_height="232dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.ads.nativetemplates.TemplateView
        android:id="@+id/my_template"
        app:gnt_template_type="@layout/gnt_small_template_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/ytvideo"/>

    <LinearLayout
        android:id="@+id/predictionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_template"
        android:visibility="gone">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/acme"
            android:text="@string/predict_next_ball"
            android:textAlignment="center"
            android:textColor="#00BCD4"
            android:textSize="20sp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#FFEB3B"
            app:cardCornerRadius="30dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/noball"
                    android:layout_width="103dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:contentDescription="@string/noball"
                    android:focusable="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/noball" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/dotball"
                    android:layout_width="106dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:contentDescription="@string/dotball"
                    android:focusable="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/dotball" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/six"
                    android:layout_width="113dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:contentDescription="@string/sixer"
                    android:focusable="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/six" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="10dp"
            app:cardBackgroundColor="#FFEB3B"
            app:cardCornerRadius="30dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/out"
                    android:layout_width="113dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:contentDescription="@string/wicket"
                    android:focusable="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/cricketoutanimation" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/one"
                    android:layout_width="113dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:contentDescription="@string/onerun"
                    android:focusable="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/onerun" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/threerun"
                    android:layout_width="113dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:contentDescription="@string/threerun"
                    android:focusable="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/threerun" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="10dp"
            app:cardBackgroundColor="#FFEB3B"
            app:cardCornerRadius="30dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/tworun"
                    android:layout_width="113dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:contentDescription="@string/tworun"
                    android:focusable="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/tworun" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/four"
                    android:layout_width="113dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:contentDescription="@string/four"
                    android:focusable="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/cricketfour" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/wide"
                    android:layout_width="113dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:contentDescription="@string/wide"
                    android:focusable="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/wideball" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <SeekBar
            android:id="@+id/overbar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="345dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:max="6"
            android:progress="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_gravity="center_horizontal">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:fontFamily="@font/acme"
                android:text="@string/your_prediction"
                android:textColor="#4CAF50" />

            <TextView
                android:id="@+id/userprediction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:fontFamily="@font/acme"
                android:textColor="#FF9800" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/acme"
                android:text="@string/result"
                android:textColor="#F44336" />


            <TextView
                android:id="@+id/ballresult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/acme"
                android:textColor="#03A9F4" />

        </LinearLayout>


        <TextView
            android:id="@+id/resultmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/acme"
            android:textColor="#FFC107"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/overbar" />


    </LinearLayout>

    <TextView
        android:id="@+id/no_live_event"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/carter_one"
        android:text="@string/no_live_event"
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        android:textSize="34sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_template" />

    <androidx.cardview.widget.CardView
        android:id="@+id/unlockPredictionCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00BCD4"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_template"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:text="@string/live_unlock_prediction"
                android:textAlignment="center"
                android:textColor="@color/denimblue"
                android:textSize="34sp"
                app:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/unlockPrediction"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundstyle"
                android:text="@string/watch_video"
                android:textColor="#FFEB3B"
                android:textSize="20sp"
                android:fontFamily="@font/baloo"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="ytvideo"
        tools:layout_editor_absoluteY="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="21dp" />





</androidx.constraintlayout.widget.ConstraintLayout>